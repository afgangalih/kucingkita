datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Breed {
  id                String             @id @default(uuid())
  slug              String             @unique
  name              String
  image             String
  coatType          String
  characteristics   String[]
  description       String
  officialName      String
  otherName         String
  origin            String
  stats             BreedStats?
  ratings           BreedRatings?
  editorialSections EditorialSection[]
  facts             Fact[]
  faqs              Faq[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model BreedStats {
  id           String @id @default(uuid())
  breedId      String @unique
  breed        Breed  @relation(fields: [breedId], references: [id], onDelete: Cascade)
  maleHeight   String
  femaleHeight String
  maleWeight   String
  femaleWeight String
  growth       String
  adult        String
  mature       String
  senior       String
}

model BreedRatings {
  id          String @id @default(uuid())
  breedId     String @unique
  breed       Breed  @relation(fields: [breedId], references: [id], onDelete: Cascade)
  coatLength  Int
  shedding    Int
  grooming    Int
  energy      Int
  vocal       Int
  family      Int
  otherPets   Int
  aloneTime   Int
  environment Int
}

model EditorialSection {
  id       String @id @default(uuid())
  breedId  String
  breed    Breed  @relation(fields: [breedId], references: [id], onDelete: Cascade)
  title    String
  subtitle String
  content  String @db.Text
  order    Int
}

model Fact {
  id          String @id @default(uuid())
  breedId     String
  breed       Breed  @relation(fields: [breedId], references: [id], onDelete: Cascade)
  title       String
  description String @db.Text
  order       Int
}

model Faq {
  id       String @id @default(uuid())
  breedId  String
  breed    Breed  @relation(fields: [breedId], references: [id], onDelete: Cascade)
  question String
  answer   String @db.Text
  order    Int
}

enum ProductCategory {
  WET_FOOD
  DRY_FOOD
  SUPPLEMENT
  TREATS
}

model Brand {
  id        String    @id @default(uuid())
  name      String    @unique @db.VarChar(100)
  slug      String    @unique
  logo      String
  category  String?   @db.VarChar(50)
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id          String          @id @default(uuid())
  slug        String          @unique
  name        String          @db.VarChar(255)
  brandId     String
  brand       Brand           @relation(fields: [brandId], references: [id])
  category    ProductCategory
  image       String
  description String          @db.Text
  benefits    String          @db.Text
  nutrition   String          @db.Text
  sizes       String[]
  link        String          @db.Text
  isPublished Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([slug])
  @@index([category])
  @@index([brandId])
}